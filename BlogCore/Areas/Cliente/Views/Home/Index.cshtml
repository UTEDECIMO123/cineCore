@model BlogCore.Models.ViewModels.HomeVM
 

<body class="d-flex flex-column" id="page-content">
<br/>
    <div class="container d-flex justify-content-between align-items-center">
    <div class="align-content-center">
        <h1 style="color:#427D9D">Lista de <b>películas</b></h1>
    </div>

    <form asp-controller="Home" asp-action="Index" method="get" class="d-flex align-items-center">
        <div class="input-group">
            <input class="form-control" type="search" name="searchString" placeholder="Buscar" aria-label="Buscar">
            <button class="btn btn-custom" type="submit">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg>
            </button>
        </div>
    </form>
</div>



<!--VALIDAMOS Y VAMMOS MOSTRANDO LOS ARTCULOS QUE TENEMOS-->
@if (Model.ListaArticulos.Count() > 0)
{
    <hr />
    <div class="container py-4">
        <div class="row">
        @foreach (var articulo in Model.ListaArticulos.OrderBy(o => o.Id))
        {
                <div class="col-md-4">
                    <div class="profile-card-4 text-center">
                        <img src="@articulo.UrlImagen" class="img img-responsive" style="height: 200px; object-fit: cover;">
                        <div class="profile-content">
                            <div class="profile-name">
                                @articulo.Nombre
                            </div>

                            <div class="profile-description">
                                    Categoría:  @articulo.Categoria.Nombre <br/>
                                </div>
                                <hr />

                            <a asp-action="Details" class="card-footer btn d-block" asp-route-id="@articulo.Id">
                                <span style="color: #427D9D;" font-size: 12px; >Más Información</span>
                            </a>

                        </div>
                    </div>
                </div>
        }
        </div>
    </div>
}


else
{
    <p>No hay articulos</p>
}
</body>

