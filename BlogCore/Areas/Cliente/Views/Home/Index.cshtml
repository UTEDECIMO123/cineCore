@model BlogCore.Models.ViewModels.HomeVM




<div class="row fondoTitulo mt-12">
    <div class="col-sm-12">
        <h1 class="text-center text-black py-1">Lista de peliculas </h1>
    </div>
</div>
<div class="container-fluid">
    <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-primary" type="submit">Search</button>
    </form>
</div>

<!--VALIDAMOS Y VAMMOS MOSTRANDO LOS ARTCULOS QUE TENEMOS-->
@if (Model.ListaArticulos.Count() > 0)
{
    <hr />
    <div class="row row-cols-1 row-cols-md-4 g-4 py-6S">
        @foreach (var articulo in Model.ListaArticulos.OrderBy(o => o.Id))
        {
            <div class="card-deck col-sm-3 ">
                <div class="card contenedorImg">
                    <picture>
                        <img src="@articulo.UrlImagen" class="imgP card-img-top img-fluid">
                    </picture>
                    <div class="card-body">
                        <h5 class="text-center">@articulo.Nombre</h5>
                        <div>

                            <center> <a asp-action="Details" class="btn btn-outline-primary btnInf " style="border-radius:2px" asp-route-id="@articulo.Id">Mas Informacion</a></center>

                        </div>

                    </div>
                </div>

            </div>
        }

    </div>
}
else
{
    <p>No hay articulos</p>
}
