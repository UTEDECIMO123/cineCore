@model BlogCore.Models.Articulo

@{
    ViewData["Title"] = "Detalle Articulo";
}

<div class="container">
    <div class="card">
        <div class="col-12 col-md-6">
            <h4 class="text-primary">@Model.Nombre</h4>
        </div>
        <div class=" text-end">
            <h4 class="text-muted">Fecha: @Model.FechaDeCreacion</h4>
        </div>
        <div class="card-body">
            <div class="col-12">
                <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block"  />
                <p class="text-secondary">@Html.Raw(Model.Description)</p>
            </div>
        </div>

        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-success ">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>