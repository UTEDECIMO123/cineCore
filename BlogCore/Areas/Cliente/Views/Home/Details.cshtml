@model BlogCore.Models.Articulo

@{
    ViewData["Title"] = "Detalle Articulo";
}


<div class="container mt-5 bg-white rounded-2 p-5 shadow-sm">
    <div>
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="m-0 fw-bold">@Model.Nombre</h2>
            <h4 class="text-secondary m-0" id="fecha"></h4>
        </div>
        <hr class="mt-2 mb-5" />
        <div>
            <div>
                <img src="@Model.UrlImagen" class="rounded d-block mx-auto mb-5" style="max-width: 400px; max-height: 500px;" />
                <!-- Cambia los valores de max-width y max-height según el tamaño que desees -->
                <p class="text-secondary">@Html.Raw(Model.Description)</p>
            </div>


            <hr class="my-3" />

            <div class="container">
                <h2>Comentarios</h2>
                <script src="https://utteranc.es/client.js"
                        repo="UTEDECIMO123/comentarios"
                        issue-term="pathname"
                        topic="ice cream"
                        crossorigin="anonymous"
                        async></script>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-success ">Volver</a>
        </div>
    </div>
    <script>

        const fecha = document.querySelector("#fecha")

        function formatDate(dateString) {
            const date = dateString.split(" ")[0].replace(/[/]/gi, "-").split("-")
            const fecha = new Date(date.reverse().join("-"))

            return fecha.toLocaleDateString("es-ES", {
                day: "numeric",
                month: "long",
                year: "numeric"
            })
        }

        fecha.textContent = formatDate("@Model.FechaDeCreacion")
    </script>
</div>
