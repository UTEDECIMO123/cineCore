@page
@using BlogCore.Utilidades;
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

    <body>
            <div class="row">
                <div class="col-lg-10 col-xl-9 mx-auto">
                    <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                        <div class="card-img-left d-none d-md-flex">
                            <!-- Background image for card set in CSS! -->
                        </div>
                        <div class="card-body p-4 p-sm-4">
                            <h5 class="card-title text-center mb-2 fw-light fs-2">@ViewData["Title"]</h5>
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                <div class="form-floating mb-2">
                                    <input asp-for="Input.Nombre" class="form-control" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Nombre">Nombre</label>
                                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                                </div>


                                <div class="form-floating mb-2">
                                    <input asp-for="Input.Direccion" class="form-control" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Direccion">Dirección</label>
                                    <span asp-validation-for="Input.Direccion" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-2">
                                    <input asp-for="Input.Ciudad" class="form-control" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Ciudad">Ciudad</label>
                                    <span asp-validation-for="Input.Ciudad" class="text-danger"></span>
                                </div>


                                <div class="form-floating mb-2">
                                    <input asp-for="Input.Pais" class="form-control" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Pais">País</label>
                                    <span asp-validation-for="Input.Pais" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-2">
                                    <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.PhoneNumber"></label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-2">
                                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                                    <label asp-for="Input.Email">Correo Electrónico</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-2">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.Password">Contraseña</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-2">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                                    <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>


                                <!-- SE VALIDA Y SE ESCONDERA EL MENU A SOLO QUE EL USUARIO ESTE AUTENTICADO-->
                                @if (User.IsInRole(CNT.Admin))
                                {
                                    <!--selecto de roles-->
                                    <div class="form-group row">
                                        <div class="col-6"><h4>Selecionar Rol de Usuario</h4></div>
                                        <div class="col-5">
                                            <input type="radio" name="radUsuarioRole" value="@CNT.Admin" />@CNT.Admin
                                            <input type="radio" name="radUsuarioRole" value="@CNT.Usuario" />@CNT.Usuario
                                        </div>

                                    </div>

                                }

                                <div class="d-grid mb-2">
                                    <button id="registerSubmit" class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit">Registro</button>
                                </div>

                                <p class="d-block text-center mt-2 small">¿Ya tienes cuenta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Ingresa aquí</a></p>


                                <hr class="my-2">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </body>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
