<!--indicamos el modelo por el cual vamos a trabajar-->
@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<br />
<br />
<br />
<h3 class="text-center"> Editar categoria</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-6">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <br />
                <br />
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder=" Ingrese el nombre de la categoria" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label class="col-6">
                        <label asp-for="Order"></label>
                    </label>
                </div>
                <br />
                <br />

                <div class="col-8">
                    <input asp-for="Order" class="form-control" placeholder="Ingrese el orden " />
                    <span asp-validation-for="Order" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                   <!--MODIFUICAMOS EL BOTON-->
                   <button type="submit" class="btn btn-success form-control" asp-route-id="@Model.Id">Actualizar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-primary form-control">Volver a lista</a>
                </div>
            </div>
        </div>
    </div>
</form>